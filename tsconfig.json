{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */

    "target": "ES2022",
    "lib": ["ES2022", "DOM"],

    "module": "ESNext",
    "rootDir": "./src",
    "outDir": "./dist",
    "moduleResolution": "bundler",
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*"]
    },

    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true /* Skip type checking all .d.ts files. */
  },
  "include": ["src/**/*.ts", "src/**/*.js", "__tests__/**/*.ts"],
  "exclude": ["node_modules", "babel.config.cjs", "jest.config.js"]
}
